{
	/* Example of base tsconfig.json */
	"compilerOptions":
	{
		"target": "es2017",
		"module": "es2020",
		"lib":
		[
			"es2018",
			"dom",
		],
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": true,

		"rootDir": "src",
		"outDir": "out",

		"newLine": "LF",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictFunctionTypes": false,
		"strictPropertyInitialization": true,
		// Speed up compilation if we don't use lot of external libraries.
		"skipLibCheck": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"stripInternal": true,
		"sourceMap": true,
	},
	"include":
	[
		"**/*.ts",
		"**/*.spec.ts",
		"**/*.d.ts",
	],
	"exclude":
	[
		"node_modules",
		"out",
		"dist",
	]
}
